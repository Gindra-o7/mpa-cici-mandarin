---
const background = "/services/cici-language-course-expert/roadmap/background.webp";

const topSteps = [
  {
    number: "02",
    title: "PLACEMENT TEST",
    description: "Take a short test to check your Mandarin level and place you in the right class (Beginner, Intermediate, Advanced, etc)."
  },
  {
    number: "04",
    title: "JOIN THE CLASS",
    description: "Join your first class with expert teachers and interactive materials to kick off your Mandarin journey."
  }
];

const bottomSteps = [
  {
    number: "01",
    title: "FREE CONSULTATION",
    description: "Schedule a free chat to discuss your goals so we can suggest the best class level and schedule for you."
  },
  {
    number: "03",
    title: "REGISTRATION",
    description: "Fill in your details and choose a payment plan to complete your registration and get ready to start."
  },
  {
    number: "05",
    title: "PROGRESS & GRADUATE",
    description: "Get feedback, improve steadily, earn your certificate, and celebrate using Mandarin for study, work, or travel!"
  }
];
---

<section class="relative w-full overflow-hidden -mt-6 -z-3">
  <img src={background} alt="Roadmap background" class="w-full h-auto block" />

  <div class="absolute inset-0 px-4 md:px-8 lg:px-16 py-8 md:py-12">
    <div class="flex justify-center mb-8 md:mb-12">
      <div class="text-white px-8 md:px-12 py-7 md:py-7 rounded-lg shadow-lg">
        <h2 class="text-xl md:text-xl lg:text-3xl font-bold text-center tracking-wide font-mochiy-pop-one">
          ROADMAP TO JOIN
        </h2>
      </div>
    </div>

    <div class="max-w-7xl mx-auto space-y-8 md:space-y-12">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-2 md:gap-4 lg:gap-6 justify-items-center mt-18">
        {topSteps.map((step) => (
          <div class="flex flex-col items-center w-full max-w-sm px-10" key={step.number}>
            <div class="p-4 md:p-6 w-full mb-12 md:mb-16">
              <h3 class="font-bold text-sm md:text-base lg:text-lg mb-2 md:mb-3 text-center text-red-600">
                {step.title}
              </h3>
              <p class="text-red-700 text-xs md:text-sm lg:text-base text-center leading-relaxed">
                {step.description}
              </p>
            </div>

            <div class="rounded-full flex items-center justify-center font-bold text-3xl md:text-5xl text-white font-mochiy-pop-one text-outline-red">
              {step.number}
            </div>
          </div>
        ))}
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8 justify-items-center">
        {bottomSteps.map((step) => (
          <div class="flex flex-col items-center w-full max-w-sm" key={step.number}>
            <!-- Step Number Badge -->
            <div class="w-12 h-12 md:w-16 md:h-16 rounded-full flex items-center justify-center font-bold text-xl md:text-2xl text-white mb-3 md:mb-4 shadow-md border-2 md:border-4 border-white bg-red-600">
              {step.number}
            </div>

            <!-- Content Box -->
            <div class="p-4 md:p-6 w-full">
              <h3 class="font-bold text-sm md:text-base lg:text-lg mb-2 md:mb-3 text-center text-red-600">
                {step.title}
              </h3>
              <p class="text-gray-700 text-xs md:text-sm lg:text-base text-center leading-relaxed">
                {step.description}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>