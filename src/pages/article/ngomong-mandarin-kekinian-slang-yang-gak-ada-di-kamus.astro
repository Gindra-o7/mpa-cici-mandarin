---
import { ArrowRight, Briefcase, Globe, GraduationCap } from "@lucide/astro";
import Layout from "../../layouts/Layout.astro";

// --- Aset dari pola asli Anda ---
const Background =
    "/pages/landing-pages/hottest-news/article/article-background.webp";
const CoverArticle =
    "/pages/landing-pages/hottest-news/article/cover-artikel-dalam-9.webp";

// --- Objek artikel diperbarui untuk konten baru ---
const article = {
    topic: "CICIUNBOXCHINA #9",
    title: "Ngomong Mandarin Kekinian: Slang yang Gak ada di Kamus!",
    publishDate: "14 Januari 2026",
    author: "Celia Vanessa Hakim",
};
