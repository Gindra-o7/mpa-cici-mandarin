---
import Layout from "../../../layouts/Layout.astro";
import { getArticles } from "../../../utils/data";

export const prerender = false;

const { slug } = Astro.params;
const articles = getArticles();
const article = articles.find((a) => a.slug === slug);

if (!article) {
  return Astro.redirect("/404");
}

/* interface Props {
  article: {
     ... inferred from usage or data util ...
  }
} */
// We don't need explicit Props interface for page component props anymore since we aren't passing them from getStaticPaths
// But we can cast 'article' to any or a type from utils if strictly needed.
// 'article' is already defined above from getArticles().

// Convert "29 Jan 2026" to "2026-01-29" for input[type="date"]
function formatDateForInput(dateStr: string) {
  if (!dateStr) return "";
  const date = new Date(dateStr);
  return date.toISOString().split("T")[0];
}

const defaultDate = formatDateForInput(article.publishDate);
---

<Layout title={`Edit Article: ${article.title}`}>
  <main class="min-h-screen bg-gray-50 py-32 px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto bg-white rounded-lg shadow-md p-8">
      <div class="flex justify-between items-center mb-8 border-b pb-4">
        <h1 class="text-3xl font-bold text-gray-900">Edit Article</h1>
        <a href="/admin" class="text-sm text-gray-500 hover:text-gray-900">Back to Dashboard</a>
      </div>

      <form id="articleForm" class="space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label for="topic" class="block text-sm font-medium text-gray-700">Topic (e.g., CICIUNBOXCHINA #3)</label>
            <div class="flex gap-2">
              <input type="text" id="topic" name="topic" value={article.topic} required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500 sm:text-sm border p-2" />
              <div class="flex flex-col gap-1 items-center justify-center">
                <label for="topicBgColor" class="sr-only">Topic Background</label>
                <input type="color" id="topicBgColor" name="topicBgColor" value={article.topicBgColor || "#B91C1C"} class="h-8 w-8 rounded cursor-pointer border p-0.5" title="Topic Background Color" />
              </div>
              <div class="flex flex-col gap-1 items-center justify-center">
                <label for="topicTextColor" class="sr-only">Topic Text</label>
                <input type="color" id="topicTextColor" name="topicTextColor" value={article.topicTextColor || "#FFFFFF"} class="h-8 w-8 rounded cursor-pointer border p-0.5" title="Topic Text Color" />
              </div>
            </div>
          </div>

          <div>
            <label for="publishDate" class="block text-sm font-medium text-gray-700">Publish Date</label>
            <input type="date" id="publishDateInput" value={defaultDate} required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500 sm:text-sm border p-2" />
          </div>
        </div>

        <div>
          <label for="title" class="block text-sm font-medium text-gray-700">Article Title</label>
          <input type="text" id="title" name="title" value={article.title} required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500 sm:text-sm border p-2" />
        </div>

        <div>
          <label for="slug" class="block text-sm font-medium text-gray-700">Slug (URL Path)</label>
          <div class="flex gap-2">
            <input
              type="text"
              id="slug"
              name="slug"
              value={article.slug}
              readonly
              class="mt-1 block w-full rounded-md border-gray-300 bg-gray-100 text-gray-500 shadow-sm focus:border-red-500 focus:ring-red-500 sm:text-sm border p-2 cursor-not-allowed"
            />
          </div>
          <p class="text-xs text-gray-500 mt-1">Slug cannot be changed after creation.</p>
        </div>

        <div>
          <label for="author" class="block text-sm font-medium text-gray-700">Author</label>
          <input type="text" id="author" name="author" value={article.author} required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500 sm:text-sm border p-2" />
        </div>

        <!-- Image Uploads -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="form-group">
            <label class="block text-sm font-medium text-gray-700 mb-2">Hero Image (Inside Article)</label>
            <div class="mb-2">
              {article.heroImage && <img src={article.heroImage} class="h-32 w-full object-cover rounded-md border" />}
            </div>
            <div class="drop-zone border-2 border-dashed border-gray-300 rounded-lg p-6 text-center hover:border-red-500 transition-colors cursor-pointer" id="heroDropZone">
              <div class="space-y-1 text-center">
                <div class="flex text-sm text-gray-600 justify-center">
                  <span class="relative cursor-pointer bg-white rounded-md font-medium text-red-600 hover:text-red-500">
                    <span>Change file</span>
                  </span>
                </div>
                <p class="text-xs text-gray-500">PNG, JPG, WEBP up to 5MB</p>
              </div>
              <p id="heroFileName" class="mt-2 text-sm text-gray-900 font-medium"></p>
            </div>
            <input type="file" id="heroImage" name="heroImage" accept="image/*" class="hidden" />
          </div>

          <div class="form-group">
            <label class="block text-sm font-medium text-gray-700 mb-2">Cover / Thumbnail Image (Outside)</label>
            <div class="mb-2">
              {article.coverImage && <img src={article.coverImage} class="h-32 w-full object-cover rounded-md border" />}
            </div>
            <div class="drop-zone border-2 border-dashed border-gray-300 rounded-lg p-6 text-center hover:border-red-500 transition-colors cursor-pointer" id="coverDropZone">
              <div class="space-y-1 text-center">
                <div class="flex text-sm text-gray-600 justify-center">
                  <span class="relative cursor-pointer bg-white rounded-md font-medium text-red-600 hover:text-red-500">
                    <span>Change file</span>
                  </span>
                </div>
                <p class="text-xs text-gray-500">PNG, JPG, WEBP up to 5MB</p>
              </div>
              <p id="coverFileName" class="mt-2 text-sm text-gray-900 font-medium"></p>
            </div>
            <input type="file" id="coverImage" name="coverImage" accept="image/*" class="hidden" />
          </div>
        </div>

        <div>
          <label for="openingText" class="block text-sm font-medium text-gray-700">Opening Text (Italic Quote)</label>
          <textarea id="openingText" name="openingText" rows="2" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500 sm:text-sm border p-2">{article.openingText}</textarea>
        </div>

        <!-- Block Editor Container -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Content Blocks</label>
          <div id="blocks-container" class="space-y-4 mb-4" data-existing-blocks={JSON.stringify(article.contentBlocks)}>
            <!-- Dynamic Blocks will appear here -->
          </div>

          <div class="flex gap-2">
            <button type="button" id="addParagraphBtn" class="flex items-center gap-1 px-3 py-2 bg-gray-100 text-gray-700 rounded-md hover:bg-gray-200 text-sm"> Add Paragraph </button>
            <button type="button" id="addSubheadingBtn" class="flex items-center gap-1 px-3 py-2 bg-gray-100 text-gray-700 rounded-md hover:bg-gray-200 text-sm"> Add Subheading </button>
            <button type="button" id="addImageBtn" class="flex items-center gap-1 px-3 py-2 bg-gray-100 text-gray-700 rounded-md hover:bg-gray-200 text-sm"> Add Image </button>
          </div>
        </div>

        <div>
          <div class="flex justify-between items-center mb-1">
            <label for="closingText" class="block text-sm font-medium text-gray-700">Closing Text (Colored Box)</label>
            <div class="flex gap-2">
              <div class="flex items-center gap-1">
                <label for="closingBgColor" class="text-xs text-gray-500">Bg:</label>
                <input type="color" id="closingBgColor" name="closingBgColor" value={article.closingBgColor || "#FEF2F2"} class="h-6 w-6 rounded cursor-pointer border p-0.5" title="Background Color" />
              </div>
              <div class="flex items-center gap-1">
                <label for="closingBorderColor" class="text-xs text-gray-500">Border:</label>
                <input type="color" id="closingBorderColor" name="closingBorderColor" value={article.closingBorderColor || "#B91C1C"} class="h-6 w-6 rounded cursor-pointer border p-0.5" title="Border Color" />
              </div>
            </div>
          </div>
          <textarea id="closingText" name="closingText" rows="2" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500 sm:text-sm border p-2">{article.closingText}</textarea>
        </div>

        <div>
          <label for="references" class="block text-sm font-medium text-gray-700">References (HTML Supported)</label>
          <textarea id="references" name="references" rows="5" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500 sm:text-sm border p-2 font-mono">{article.references}</textarea>
        </div>

        <div class="pt-4 flex justify-end">
          <button
            type="submit"
            class="inline-flex justify-center py-2 px-6 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-700 hover:bg-red-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors"
          >
            Update Article
          </button>
        </div>
      </form>
    </div>
  </main>
</Layout>

<script>
  // Basic Drag and Drop (Keep helper for Cover Image)
  function setupDragDrop(zoneId: string, inputId: string, nameId: string) {
    const zone = document.getElementById(zoneId);
    const input = document.getElementById(inputId) as HTMLInputElement;
    const nameDisplay = document.getElementById(nameId);

    if (!zone || !input || !nameDisplay) return;

    zone.addEventListener("click", () => input.click());

    input.addEventListener("change", () => {
      if (input.files && input.files[0]) {
        nameDisplay.textContent = input.files[0].name;
        zone.classList.add("border-red-500", "bg-red-50");
      }
    });
  }
  setupDragDrop("heroDropZone", "heroImage", "heroFileName");
  setupDragDrop("coverDropZone", "coverImage", "coverFileName");

  // --- BLOCK EDITOR LOGIC ---
  const blocksContainer = document.getElementById("blocks-container");
  const addParagraphBtn = document.getElementById("addParagraphBtn");
  const addSubheadingBtn = document.getElementById("addSubheadingBtn");
  const addImageBtn = document.getElementById("addImageBtn");

  let blockCounter = 0;

  function createDeleteButton(blockDiv: HTMLElement) {
    const btn = document.createElement("button");
    btn.type = "button";
    btn.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400 hover:text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" /></svg>`;
    btn.className = "absolute top-2 right-2 p-1 rounded-full hover:bg-gray-100";
    btn.title = "Delete Block";
    btn.onclick = () => blockDiv.remove();
    return btn;
  }

  function addParagraph(content = "") {
    blockCounter++;
    const div = document.createElement("div");
    div.className = "relative p-4 border rounded-md bg-gray-50 group block-item";
    div.dataset.type = "paragraph";

    div.innerHTML = `
        <div class="flex justify-between items-center mb-1">
            <label class="block text-xs font-semibold text-gray-500 uppercase tracking-wide">Paragraph</label>
            <div class="flex gap-2 mr-8">
                <button type="button" class="bold-btn p-1 text-gray-500 hover:text-gray-900 rounded hover:bg-gray-200" title="Bold (Ctrl+B)" onmousedown="event.preventDefault()">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M6 4h8a4 4 0 0 1 4 4 4 4 0 0 1-4 4H6z"></path><path d="M6 12h9a4 4 0 0 1 4 4 4 4 0 0 1-4 4H6z"></path></svg>
                </button>
                <div class="w-px bg-gray-300 h-4 self-center"></div>
            </div>
        </div>
        <div class="block-content w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500 sm:text-sm border p-2 bg-white min-h-[100px]" contenteditable="true">${content}</div>
      `;

    div.appendChild(createDeleteButton(div));
    blocksContainer?.appendChild(div);

    const contentDiv = div.querySelector(".block-content") as HTMLElement;
    const boldBtn = div.querySelector(".bold-btn") as HTMLButtonElement;

    boldBtn.addEventListener("click", () => {
      document.execCommand("bold", false, undefined);
      contentDiv.focus();
    });

    contentDiv.addEventListener("keydown", (e) => {
      if ((e.ctrlKey || e.metaKey) && e.key.toLowerCase() === "b") {
        e.preventDefault();
        document.execCommand("bold", false, undefined);
      }
    });

    // Handle Paste to strip formatting
    contentDiv.addEventListener("paste", (e) => {
      e.preventDefault();
      const text = e.clipboardData?.getData("text/plain");
      if (text) {
        document.execCommand("insertText", false, text);
      }
    });
  }

  function addSubheading(content = "") {
    blockCounter++;
    const div = document.createElement("div");
    div.className = "relative p-4 border rounded-md bg-gray-50 group block-item";
    div.dataset.type = "subheading";

    div.innerHTML = `
        <div class="flex justify-between items-center mb-1">
            <label class="block text-xs font-semibold text-gray-500 uppercase tracking-wide">Subheading</label>
        </div>
        <div class="block-content w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500 sm:text-sm border p-2 bg-white font-bold" contenteditable="true">${content}</div>
      `;

    div.appendChild(createDeleteButton(div));
    blocksContainer?.appendChild(div);

    const contentDiv = div.querySelector(".block-content") as HTMLElement;

    // Handle Paste to strip formatting
    contentDiv.addEventListener("paste", (e) => {
      e.preventDefault();
      const text = e.clipboardData?.getData("text/plain");
      if (text) {
        document.execCommand("insertText", false, text);
      }
    });
    // Disable enter key (no multiline subheadings)
    contentDiv.addEventListener("keydown", (e) => {
      if (e.key === "Enter") {
        e.preventDefault();
      }
    });
  }

  function addImage(url = "", existingFileKey = "") {
    blockCounter++;
    const div = document.createElement("div");
    div.className = "relative p-4 border rounded-md bg-gray-50 group block-item";
    div.dataset.type = "image";

    // If we have an existing URL, we don't need a new file key necessarily,
    // BUT we want to keep the option to REPLACE it.
    // If preserving existing, we can store the URL as value directly in a hidden input?
    // Simpler: Just rely on the server handling updates.
    // For NEW images, we need a key. For EXISTING, we just need to pass the URL back unless changed.

    const fileId = `block_img_${blockCounter}_${Date.now()}`;
    div.dataset.fileKey = fileId;

    // If existing URL, we might want to store it in a data attribute
    if (url) {
      div.dataset.existingUrl = url;
    }

    div.innerHTML = `
        <label class="block text-xs font-semibold text-gray-500 mb-1 uppercase tracking-wide">Image</label>
        <div class="flex items-center gap-4">
            <div class="shrink-0 h-20 w-20 bg-gray-200 rounded-md overflow-hidden flex items-center justify-center border text-gray-400">
                ${url ? `<img src="${url}" class="w-full h-full object-cover" />` : '<span class="text-xs">Preview</span>'}
            </div>
            <div class="flex-1">
                <input type="file" accept="image/*" class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-red-50 file:text-red-700 hover:file:bg-red-100 curser-pointer" />
                <p class="text-xs text-gray-400 mt-1">Select an image to display between paragraphs. ${url ? "(Leave empty to keep existing)" : ""}</p>
            </div>
        </div>
      `;
    div.appendChild(createDeleteButton(div));

    const input = div.querySelector("input[type='file']") as HTMLInputElement;
    const previewBox = div.querySelector(".shrink-0") as HTMLElement;

    input.addEventListener("change", () => {
      if (input.files && input.files[0]) {
        const url = URL.createObjectURL(input.files[0]);
        previewBox.innerHTML = `<img src="${url}" class="w-full h-full object-cover" />`;
        // Clear existing URL if replaced
        delete div.dataset.existingUrl;
      }
    });

    blocksContainer?.appendChild(div);
  }

  addParagraphBtn?.addEventListener("click", () => addParagraph());
  addSubheadingBtn?.addEventListener("click", () => addSubheading());
  addImageBtn?.addEventListener("click", () => addImage());

  // Initialize existing blocks
  const existingBlocksStr = blocksContainer?.dataset.existingBlocks;
  if (existingBlocksStr) {
    try {
      const blocks = JSON.parse(existingBlocksStr);
      blocks.forEach((block: any) => {
        if (block.type === "paragraph") addParagraph(block.value);
        else if (block.type === "subheading") addSubheading(block.value);
        else if (block.type === "image") addImage(block.value);
      });
    } catch (e) {
      console.error("Error parsing existing blocks", e);
    }
  }

  // Form Submit
  const form = document.getElementById("articleForm") as HTMLFormElement;
  form?.addEventListener("submit", async (e) => {
    e.preventDefault();

    if (!form.checkValidity()) {
      form.reportValidity();
      return;
    }

    const formData = new FormData(form);

    // Format Date
    const dateInput = document.getElementById("publishDateInput") as HTMLInputElement;
    if (dateInput.value) {
      const dateObj = new Date(dateInput.value);
      const day = dateObj.getDate();
      const month = dateObj.toLocaleString("en-US", { month: "short" });
      const year = dateObj.getFullYear();
      formData.append("publishDate", `${day} ${month} ${year}`);
    }

    // Process Blocks
    const blocks: any[] = [];
    const blockItems = document.querySelectorAll(".block-item");

    blockItems.forEach((item) => {
      const type = (item as HTMLElement).dataset.type;

      if (type === "paragraph" || type === "subheading") {
        const contentDiv = item.querySelector(".block-content") as HTMLElement;
        if (contentDiv.innerHTML.trim()) {
          blocks.push({ type: type, value: contentDiv.innerHTML });
        }
      } else if (type === "image") {
        const fileKey = (item as HTMLElement).dataset.fileKey;
        const existingUrl = (item as HTMLElement).dataset.existingUrl;
        const input = item.querySelector("input[type='file']") as HTMLInputElement;

        if (input.files && input.files[0] && fileKey) {
          // New file uploaded
          formData.append(fileKey, input.files[0]);
          blocks.push({ type: "image", fileKey: fileKey });
        } else if (existingUrl) {
          // Keep existing image
          blocks.push({ type: "image", value: existingUrl });
        }
      }
    });

    // Color Sync Logic
    const topicBgInput = document.getElementById("topicBgColor") as HTMLInputElement;
    const closingBgInput = document.getElementById("closingBgColor") as HTMLInputElement;
    const closingBorderInput = document.getElementById("closingBorderColor") as HTMLInputElement;

    topicBgInput?.addEventListener("input", () => {
      if (topicBgInput.value) {
        // Set border to match topic
        if (closingBorderInput) closingBorderInput.value = topicBgInput.value;

        // Mix with white 90% for background
        const hex = topicBgInput.value.replace(/^#/, "");
        const r = parseInt(hex.substring(0, 2), 16);
        const g = parseInt(hex.substring(2, 4), 16);
        const b = parseInt(hex.substring(4, 6), 16);

        const mix = (c: number) => Math.round(c + (255 - c) * 0.9);

        const newR = mix(r).toString(16).padStart(2, "0");
        const newG = mix(g).toString(16).padStart(2, "0");
        const newB = mix(b).toString(16).padStart(2, "0");

        if (closingBgInput) closingBgInput.value = `#${newR}${newG}${newB}`;
      }
    });

    // Append JSON string of blocks
    formData.append("contentBlocksJSON", JSON.stringify(blocks));

    try {
      const response = await fetch("/api/articles", {
        method: "POST",
        body: formData,
      });

      if (response.ok) {
        const result = await response.json();
        alert("Article updated successfully!");
        window.location.href = `/article/${result.slug}`;
      } else {
        const error = await response.text();
        alert("Failed to update article: " + error);
      }
    } catch (err) {
      alert("Error updating article: " + err);
    }
  });

  // Color Sync Logic (Correctly placed outside submit handler)
  const topicBgInput = document.getElementById("topicBgColor") as HTMLInputElement;
  const closingBgInput = document.getElementById("closingBgColor") as HTMLInputElement;
  const closingBorderInput = document.getElementById("closingBorderColor") as HTMLInputElement;

  if (topicBgInput) {
    topicBgInput.addEventListener("input", () => {
      if (topicBgInput.value) {
        // Set border to match topic
        if (closingBorderInput) closingBorderInput.value = topicBgInput.value;

        // Manual mix with white 90%
        const hex = topicBgInput.value.replace(/^#/, "");
        const r = parseInt(hex.substring(0, 2), 16);
        const g = parseInt(hex.substring(2, 4), 16);
        const b = parseInt(hex.substring(4, 6), 16);

        const mix = (c: number) => Math.round(c + (255 - c) * 0.9);

        const newR = mix(r).toString(16).padStart(2, "0");
        const newG = mix(g).toString(16).padStart(2, "0");
        const newB = mix(b).toString(16).padStart(2, "0");

        if (closingBgInput) closingBgInput.value = `#${newR}${newG}${newB}`;
      }
    });
  }
</script>
